<section class='public-recipe-container'>
  <h1>Public Recipes</h1>
  <% if @public_recipes.exists? %>
       <div class='public-recipe'>
         <% @public_recipes.each do |recipe| %>
         <% sum = 0 %>
            <%= link_to recipe_path(recipe.id) do %>

              <div class='name'>
                 <p><%= recipe.name %></p>
                 <p>By: <%= recipe.user.name %></p>
              </div>
              
              <div>
                <p>Total food items: <%= recipe.recipe_foods.count %></p>  

                <% recipe.recipe_foods.each {|food| sum += food.quantity * food.food.unit_price} %>
                <p><span><%= "Total Price $#{sum}" %></span></p>
              </div>
            <% end %> 
         <% end %>
       </div>
       
     <% else %>
      <h2>No recipes availabale!</h2>
  <% end %>  


</section>